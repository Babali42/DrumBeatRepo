{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "labels": ["dependencies"],

  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,

  "dependencyDashboard": true,

  "lockFileMaintenance": {
    "enabled": false
  },

  "packageRules": [
    {
      "description": "DISABLE all lockfile-only updates",
      "matchUpdateTypes": ["lockfile-only"],
      "enabled": false
    }
  ],

  "ignorePresets": ["helpers:disableLockFileMaintenance"]
}
